<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@color/buttonBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

        <Button
            android:id="@+id/buttonBes"
            android:layout_width="97dp"
            android:layout_height="80dp"
            android:layout_marginStart="8dp"
            android:background="@android:color/transparent"
            android:text="5"
            android:textSize="34sp"
            app:layout_constraintStart_toEndOf="@+id/buttonDort"
            app:layout_constraintTop_toBottomOf="@+id/buttonSekiz" />

        <Button
            android:id="@+id/buttonCarpma"
            android:layout_width="97dp"
            android:layout_height="80dp"
            android:layout_marginStart="7dp"
            android:background="@color/islemColor"
            android:text="x"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/buttonDokuz"
            app:layout_constraintTop_toBottomOf="@+id/buttonBolme" />

        <Button
            android:id="@+id/buttonDokuz"
            android:layout_width="97dp"
            android:layout_height="80dp"
            android:layout_marginStart="8dp"
            android:background="@android:color/transparent"
            android:text="9"
            android:textSize="34sp"
            app:layout_constraintStart_toEndOf="@+id/buttonSekiz"
            app:layout_constraintTop_toBottomOf="@+id/buttonBackSpace" />

        <Button
            android:id="@+id/buttonSekiz"
            android:layout_width="97dp"
            android:layout_height="80dp"
            android:layout_marginStart="8dp"
            android:background="@android:color/transparent"
            android:text="8"
            android:textSize="34sp"
            app:layout_constraintStart_toEndOf="@+id/buttonYedi"
            app:layout_constraintTop_toBottomOf="@+id/buttonBackSpace" />

        <Button
            android:id="@+id/buttonClear"
            android:layout_width="97dp"
            android:layout_height="80dp"
            android:background="@android:color/transparent"
            android:text="C"
            android:textAlignment="center"
            android:textSize="34sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/buttonBackSpace"
            android:layout_width="97dp"
            android:layout_height="80dp"
            android:layout_marginStart="8dp"
            android:background="@android:color/transparent"
            android:text="Back Space"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/buttonClear"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/buttonBolme"
            android:layout_width="97dp"
            android:layout_height="80dp"
            android:background="@color/islemColor"
            android:text="/"
            android:textAlignment="center"
            android:textSize="48sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/buttonYedi"
            android:layout_width="97dp"
            android:layout_height="80dp"
            android:text="7"
            android:background="@android:color/transparent"
            android:textSize="34sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonClear" />

        <Button
            android:id="@+id/buttonDort"
            android:layout_width="97dp"
            android:layout_height="80dp"
            android:text="4"
            android:background="@android:color/transparent"
            android:textSize="34sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonYedi" />

        <Button
            android:id="@+id/buttonBir"
            android:layout_width="97dp"
            android:layout_height="80dp"
            android:text="1"
            android:background="@android:color/transparent"
            android:textSize="34sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonDort" />

        <Button
            android:id="@+id/buttonVirgul"
            android:layout_width="97dp"
            android:layout_height="80dp"
            android:background="@android:color/transparent"
            android:text=","
            android:textSize="34sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/buttonSifir"
            android:layout_width="97dp"
            android:layout_height="80dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@android:color/transparent"
            android:text="0"
            android:textSize="34sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/buttonEsittir"
            app:layout_constraintStart_toEndOf="@+id/buttonVirgul" />

        <Button
            android:id="@+id/buttonEsittir"
            android:layout_width="202dp"
            android:layout_height="80dp"
            android:background="@color/esittirColor"
            android:text="="
            android:textSize="34sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonUc" />

        <Button
            android:id="@+id/buttonAlti"
            android:layout_width="97dp"
            android:layout_height="80dp"
            android:layout_marginStart="8dp"
            android:text="6"
            android:background="@android:color/transparent"
            android:textSize="34sp"
            app:layout_constraintStart_toEndOf="@+id/buttonBes"
            app:layout_constraintTop_toBottomOf="@+id/buttonDokuz" />

        <Button
            android:id="@+id/buttonCikarma"
            android:layout_width="97dp"
            android:layout_height="80dp"
            android:layout_marginStart="7dp"
            android:background="@color/islemColor"
            android:text="-"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/buttonAlti"
            app:layout_constraintTop_toBottomOf="@+id/buttonCarpma" />

        <Button
            android:id="@+id/buttonIki"
            android:layout_width="97dp"
            android:layout_height="80dp"
            android:layout_marginStart="8dp"
            android:background="@android:color/transparent"
            android:text="2"
            android:textSize="34sp"
            app:layout_constraintStart_toEndOf="@+id/buttonBir"
            app:layout_constraintTop_toBottomOf="@+id/buttonBes" />

        <Button
            android:id="@+id/buttonUc"
            android:layout_width="97dp"
            android:layout_height="80dp"
            android:layout_marginStart="8dp"
            android:text="3"
            android:background="@android:color/transparent"
            android:textSize="34sp"
            app:layout_constraintStart_toEndOf="@+id/buttonIki"
            app:layout_constraintTop_toBottomOf="@+id/buttonAlti" />

        <Button
            android:id="@+id/buttonToplama"
            android:layout_width="97dp"
            android:layout_height="80dp"
            android:layout_marginStart="8dp"
            android:background="@color/islemColor"
            android:text="+"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/buttonUc"
            app:layout_constraintTop_toBottomOf="@+id/buttonCikarma" />

        <Button
            android:id="@+id/buttonUs"
            android:layout_width="97dp"
            android:layout_height="80dp"
            android:layout_marginStart="15dp"
            android:background="@color/islemColor"
            android:text="^"
            android:textSize="34sp"
            app:layout_constraintEnd_toStartOf="@+id/buttonBolme"
            app:layout_constraintStart_toEndOf="@+id/buttonBackSpace"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewIslem"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:textAlignment="textEnd"
            android:textSize="48sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewSonuc"
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:textAlignment="textEnd"
            android:textSize="60sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewIslem" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>